<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dce1dd"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:background="#dce1dd">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:src="@drawable/logo_main_dc_black"
            android:layout_marginLeft="80dp"></ImageView>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#dce1dd"
        android:background="#f6f6f8"
        android:layout_weight="5"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            >



            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:background="#f6f6f8"
                android:orientation="horizontal">



            </LinearLayout>

            <ImageButton
                android:id="@+id/stress_btn"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="#dce1dd"
                android:scaleType="fitXY"
                android:src="@drawable/stress_btn_dc"></ImageButton>

            <ImageButton
                android:id="@+id/weather_btn"
                android:layout_width="340dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/weather_btn_dc"
                android:background="#dce1dd"
                android:layout_marginTop="290dp"
                android:layout_centerHorizontal="true" >
            </ImageButton>
        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"

            android:textColor="@color/black"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            >

        </TextView>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            >

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            >

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            >

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            >

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>