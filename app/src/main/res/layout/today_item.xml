<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="#657a67">

    <TextView
        android:id="@+id/today_weather_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="시간"
        android:textColor="#dce1dd"
        app:layout_constraintLeft_toLeftOf="@id/today_weather_icon"
        app:layout_constraintRight_toRightOf="@id/today_weather_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/today_weather_icon"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/today_weather_time" />

    <TextView
        android:id="@+id/today_weather_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="온도"
        android:textColor="#dce1dd"
        app:layout_constraintLeft_toLeftOf="@id/today_weather_icon"
        app:layout_constraintRight_toRightOf="@id/today_weather_icon"
        app:layout_constraintTop_toBottomOf="@+id/today_weather_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>