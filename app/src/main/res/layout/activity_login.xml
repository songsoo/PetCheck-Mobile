<?xml version="1.0" encoding="utf-8"?>
<!-- LOGIN START -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/login_text01"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:text="산책 나가요"
            android:textSize="24dp"
            android:textColor="@color/default_orange"/>

        <TextView
            android:id="@+id/login_text02"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:text="ID" />

        <EditText
            android:id="@+id/login_editText_ID"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:hint="Enter ID"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:backgroundTint="@color/white"
            />

        <TextView
            android:id="@+id/login_text03"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="left"
            android:text="Password" />

        <EditText
            android:id="@+id/login_editText_PW"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:hint="Enter Password"
            android:singleLine="true"
            android:inputType="textPassword"
            android:backgroundTint="@color/default_orange"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text="LOGIN"
            android:background="@drawable/all_button_bg_ripple_round_15"
            android:textColor="@color/white"
            android:textSize="15dp"/>


        <TextView
            android:id="@+id/login_text04_forgetPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Forget Password?"
            android:textColor="@color/gray"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/login_text05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Don't you have an account?"
                android:textSize="11dp"
                android:textColor="#4D4D4D" />

            <TextView
                android:id="@+id/login_text06_signup"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sign Up"
                android:textSize="11dp"
                android:textColor="@color/gray" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>